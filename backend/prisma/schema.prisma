generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id          Int      @id @default(autoincrement())
  projectId   Int
  userId      Int?
  action      String
  targetType  String?
  targetId    Int?
  description String
  createdAt   DateTime @default(now())
  Project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([projectId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime
  taskId    Int
  authorId  Int
  User      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  Task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([taskId])
}

model Conversation {
  id                 Int                  @id @default(autoincrement())
  name               String?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime
  projectId          Int?
  type               ConversationType     @default(PROJECT)
  Project            Project?             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  ConversationMember ConversationMember[]
  Message            Message[]

  @@index([projectId])
}

model ConversationMember {
  id             Int          @id @default(autoincrement())
  userId         Int
  conversationId Int
  joinedAt       DateTime     @default(now())
  lastReadAt     DateTime?
  Conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  User           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, conversationId])
  @@index([conversationId])
  @@index([userId])
}

model CustomColumn {
  id        Int      @id @default(autoincrement())
  title     String
  color     String   @default("slate")
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime
  projectId Int
  Project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Message {
  id             Int          @id @default(autoincrement())
  content        String
  senderId       Int
  conversationId Int
  createdAt      DateTime     @default(now())
  updatedAt      DateTime
  isEdited       Boolean      @default(false)
  Conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  User           User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
  @@index([senderId])
}

model Notification {
  id        Int              @id @default(autoincrement())
  type      NotificationType
  message   String
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  userId    Int
  User      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([read])
  @@index([userId])
}

model Project {
  id            Int             @id @default(autoincrement())
  description   String?
  status        ProjectStatus   @default(ACTIVE)
  startDate     DateTime?
  endDate       DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  ownerId       Int
  color         String?
  title         String
  workflowType  WorkflowType    @default(CUSTOM)
  Activity      Activity[]
  Conversation  Conversation[]
  CustomColumn  CustomColumn[]
  User          User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ProjectMember ProjectMember[]
  Task          Task[]

  @@index([ownerId])
  @@index([status])
}

model ProjectMember {
  id        Int        @id @default(autoincrement())
  role      MemberRole @default(MEMBER)
  joinedAt  DateTime   @default(now())
  userId    Int
  projectId Int
  Project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  User      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([projectId])
  @@index([userId])
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model Subtask {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime
  taskId    Int
  Task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  priority    Priority   @default(MEDIUM)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime
  projectId   Int
  assigneeId  Int?
  order       Int        @default(0)
  tags        String[]   @default([])
  columnId    String?
  endDate     DateTime?
  startDate   DateTime?
  Comment     Comment[]
  Subtask     Subtask[]
  User        User?      @relation(fields: [assigneeId], references: [id])
  Project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([assigneeId])
  @@index([columnId])
  @@index([priority])
  @@index([projectId])
  @@index([status])
}

model User {
  id                 Int                  @id @default(autoincrement())
  name               String
  email              String               @unique
  password           String?
  role               Role                 @default(USER)
  isEmailVerified    Boolean              @default(false)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime
  avatar             String?
  resetToken         String?
  resetTokenExpiry   DateTime?
  username           String               @unique
  googleId           String?              @unique
  authProvider       AuthProvider         @default(LOCAL)
  Comment            Comment[]
  ConversationMember ConversationMember[]
  Message            Message[]
  Notification       Notification[]
  Project            Project[]
  ProjectMember      ProjectMember[]
  RefreshToken       RefreshToken[]
  Task               Task[]

  @@index([email])
  @@index([username])
  @@index([googleId])
}

enum ConversationType {
  PROJECT
  DIRECT
  GROUP
}

enum MemberRole {
  OWNER
  PROJECT_MANAGER
  MEMBER
  VIEWER
}

enum NotificationType {
  TASK_ASSIGNED
  TASK_COMPLETED
  COMMENT_ADDED
  PROJECT_INVITATION
  DEADLINE_REMINDER
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}

enum Role {
  USER
  ADMIN
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  COMPLETED
  BLOCKED
}

enum WorkflowType {
  CUSTOM
  AUTOMATED
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

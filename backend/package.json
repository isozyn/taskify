{
  "name": "taskify-backend",
  "version": "1.0.0",
  "description": "Backend for Taskify - Project Management Tool",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "seed": "tsx prisma/seed.ts",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "taskify",
    "project-management",
    "express",
    "nodejs",
    "postgresql",
    "prisma",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/socket.io": "^3.0.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.23",
    "@types/nodemailer": "^6.4.21",
    "@types/supertest": "^6.0.0",
    "jest": "^29.0.0",
    "prisma": "^5.22.0",
    "supertest": "^6.3.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
